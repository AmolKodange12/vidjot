
<div class="row" align="center">
  <div class="card card-body">
    <div class="col-sm-10">
      <h1 class="display-5">{{username}}</h1>
      {{#if file}}
        <img src="{{file}}" class="rounded-circle" alt="avatar">
        
      
      {{else}}
        <img src="/img/avatar.png" class="avatar " alt="avatar">
      {{/if}}
    </div>
    
    <form action="/users/upload" method="POST" enctype="multipart/form-data">
      
        <div>
          <input name="myImage" type="file" id="real-file" hidden>
          <span class="btn btn-primary" id="custom-button">Upload photo</span>
          
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        
      <script>
        const realFilebtn=document.getElementById("real-file");
        const customBtn=document.getElementById("custom-button");

        customBtn.addEventListener("click",()=>{
          realFilebtn.click();
        });        
      </script>
    </form>
    <br><br><br>
  </div>
</div>